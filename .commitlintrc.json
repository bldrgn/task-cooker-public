{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "body-leading-blank": [2, "always"],
    "type-enum": [
      2,
      "always",
      [
        "✨ feat",
        "🐛 fix",
        "📝 docs",
        "🎨 style",
        "🔧 chore",
        "🚀 perf",
        "✅ test",
        "📦 build",
        "⏪ revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "notes",
        "projects",
        "tasks",
        "users",
        "hooks",
        "libs",
        "pages",
        "stores",
        "types",
        "ui"
      ]
    ],
    "type-case": [0],
    "type-empty": [2, "never"],
    "scope-case": [0],
    "subject-case": [0]
  }
}
